model Media {
  id         Int      @id @default(autoincrement())
  path       String   @unique
  filename   String
  mimeType   String
  size       Int

  audioSessions   AudioSession[]      @relation("AudioSessionMedia")
  worksheets      ProgramWorksheet[]  @relation("WorksheetMedia")
  program         Program?            @relation("ProgramThumbnail")

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([mimeType])
  @@index([createdAt])
}